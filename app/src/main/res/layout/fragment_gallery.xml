<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="org.pb.interview.gallery.GalleryViewModel"/>
        <import type="android.view.View"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loading_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallPulseIndicator"
            app:play="@{viewModel.isLoading}"
            app:indicatorColor="@color/colorAccent"
            android:layout_gravity="center"
            />
        <GridView
            android:id="@+id/gridview"
            android:layout_margin="@dimen/default_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:columnWidth="150dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="12dp"
            android:stretchMode="spacingWidthUniform"
            app:adapter="@{viewModel.adapterObservable}"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:inverse_visible="@{viewModel.isUploading}"
            android:onClick="@{()->viewModel.pickImage()}"
            app:srcCompat="@drawable/ic_photo_camera_white_24dp"
            />
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/uploading_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallScaleMultipleIndicator"
            app:play="@{viewModel.isUploading}"
            app:indicatorColor="@color/colorAccent"
            android:layout_gravity="bottom|end"
            />
    </android.support.design.widget.CoordinatorLayout>

</layout>
